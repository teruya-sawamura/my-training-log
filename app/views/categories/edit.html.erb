<div class="categories-new row">
    <div class="new-category-card col-10 mx-auto py-5 px-5">
        <h4 class="pb-4">Edit category name</h4>
        <div class="new-category-form mx-auto col-12">
            <%= form_with(model: @category, local: true) do |f| %>
                <%= f.text_field :name, class:"col-sm-7 col-9 no-gutters", :placeholder => "Category name" %>
                <%= f.submit 'edit', class:"col-sm-2 col-2 no-gutters" %>
            <% end %>
        </div>
    </div>
</div>